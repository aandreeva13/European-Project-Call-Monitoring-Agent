# EU Project Call Finder - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# OPENAI / LLM Configuration
# =============================================================================

# Your OpenAI API key (required for LLM fallback in hybrid safety guard)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model to use for safety checks (optional, defaults to gpt-3.5-turbo)
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI API Base URL (optional, defaults to https://api.openai.com/v1)
# Change this if using Azure OpenAI or a proxy
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM Configuration for safety guard
# Confidence threshold for flagging threats (0.0 - 1.0, default: 0.7)
SAFETY_LLM_THRESHOLD=0.7

# Enable/disable LLM fallback (true/false, default: true)
# Set to false to use regex-only mode
SAFETY_USE_LLM=true

# =============================================================================
# Application Configuration
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration (if needed)
# =============================================================================

# SQLite database path
DATABASE_URL=sqlite:///data/calls.db

# =============================================================================
# API Configuration
# =============================================================================

# FastAPI host and port
API_HOST=0.0.0.0
API_PORT=8000

# CORS origins (comma-separated list)
# Example: CORS_ORIGINS=http://localhost:3000,https://myapp.com
CORS_ORIGINS=*

# =============================================================================
# Web Scraping Configuration
# =============================================================================

