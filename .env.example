# EU Project Call Monitoring Agent - Environment Configuration
# Copy this file to .env and fill in your actual API key

# ============================================================================
# OPENAI LLM CONFIGURATION
# ============================================================================

# Required: Your OpenAI API key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model selection (gpt-4, gpt-4-turbo, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# Generation parameters
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1500

# Optional: Custom base URL for proxies or Azure
# OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================================================
# LLM BEHAVIOR SETTINGS
# ============================================================================

# Timeout for API calls (seconds)
LLM_TIMEOUT_SECONDS=30

# Feature flags
ENABLE_LLM_ANALYSIS=true
SKIP_LLM_ON_ERROR=true

# ============================================================================
# ANALYSIS SETTINGS
# ============================================================================

# Recommendation thresholds
APPLY_THRESHOLD=8.0
CONSIDER_THRESHOLD=6.0
MONITOR_THRESHOLD=4.0

# ============================================================================
# OUTPUT & LOGGING
# ============================================================================

LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false
